<Window x:Class="GreetingsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreetingsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="greetingsMessage" Content="Hello" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,0.579"/>
        <ComboBox x:Name="cmb" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_SelectionChanged">
            <ComboBoxItem Content="English" IsSelected="True"/>
            <ComboBoxItem Content="Deutsch"/>
            <ComboBoxItem Content="Русский"/>
            <ComboBoxItem Content="Татарча"/>
        </ComboBox>
        <TextBox x:Name="jsonBox" HorizontalAlignment="Center" Margin="0,159,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="636" Height="245"/>


    </Grid>
</Window>
